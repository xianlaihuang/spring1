<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="address" class="com.howbuy.spring.autowire.Address"	
		p:street="Hiyuuan" p:room="303">	
	</bean>

	<bean id="car" class="com.howbuy.spring.autowire.Car"	
		p:brand="Audo" p:price="300000">
	</bean>
	
	<bean id="person" class="com.howbuy.spring.autowire.Person"
		p:name="TOM" autowire="byType"
	
	></bean>
</beans>
